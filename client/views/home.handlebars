{{> navbar }}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <form id="movie-search">
            <div class="form-group">
                <label for="movie-search-title">Search a Movie...</label>
                <input type="text" class="form-control" id="movie-search-title" aria-describedby="emailHelp"
                    placeholder="Enter movie">

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


<div id="searchResults">

</div>

<div class="container">
    <div class="row" id="recRow">
        <div class="col-md-5">
            <h1>Because you watched {{originalTitle}}...</h1>
        </div>
    </div>

    <div class="card-deck row " id="recContainer">
        {{#each recMovies}}
        <div class="card col-md-2">
            <a href="/movie/{{this.movieid}}">
                <img class="img-fluid" src="https://image.tmdb.org/t/p/w185_and_h278_bestv2{{this.poster_path}}"
                    alt="{{this.title}}">
            </a>
        </div>
        {{/each}}
    </div>
</div>

<div class="container">
    <div class="row" id="npRow">
        <div class="col-md-5">
            <h1>Now Playing: </h1>
        </div>
    </div>

    <div class="card-deck row" id="npContainer">
    </div>
</div>


<script src="/js/home.js"></script\>